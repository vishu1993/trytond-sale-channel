<?xml version="1.0"?>

<form string="Sale Channel" col="6">
    <label name="name"/>
    <field name="name"/>
    <label name="code"/>
    <field name="code"/>
    <label name="active"/>
    <field name="active"/>
    <label name="company"/>
    <field name="company"/>
    <label name="address"/>
    <field name="address"/>
    <label name="source"/>
    <field name="source"/>
    <notebook colspan="6">
        <page string="Order Defaults" id="order">
            <label name="warehouse"/>
            <field name="warehouse"/>
            <label name="invoice_method"/>
            <field name="invoice_method"/>
            <label name="shipment_method"/>
            <field name="shipment_method"/>
            <label name="payment_term"/>
            <field name="payment_term"/>
            <label name="currency"/>
            <field name="currency"/>
            <label name="price_list"/>
            <field name="price_list"/>
        </page>
        <page string="Product Defaults" id="product_defaults" states="{'invisible': Eval('source') == 'manual' }">
            <label string="These values would be needed at the time of creating products, imported from the external channel." id="product_message"
                colspan="4" yalign="0.0" xalign="0.0" xexpand="1"/>
            <newline/>
            <label name="default_account_expense"/>
            <field name="default_account_expense"/>
            <label name="default_account_revenue"/>
            <field name="default_account_revenue"/>
            <label name="default_uom"/>
            <field name="default_uom"/>
        </page>
        <page string="Access" id="access">
            <field name="read_users" colspan="6"/>
            <field name="create_users" colspan="6"/>
        </page>
    </notebook>
</form>
